   "source": [
    "N = 1000\n",
    "\n",
    "a = 1\n",
    "found = False\n",
    "product = 0\n",
    "\n",
    "while not found:\n",
    "    for b in range(a+1, N):\n",
    "        c = (a**2 + b**2)**(1/2)\n",
    "        if a + b + c == N:\n",
    "            product = int(a*b*c)\n",
    "            found = True\n",
    "    \n",
    "    a += 1\n",
    "\n",
    "print(product)"
   ]
  }
